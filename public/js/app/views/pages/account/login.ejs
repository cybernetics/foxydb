<div class="login pane">
	<form parsley-validate data-focus="first">
		<div class="paneTitle">
			<h2>Log In</h2>
			<div class="help">Don't have an account? <a href="#!account/register">Register</a></div>
		</div>
		<div class="paneContent">

			<div class="row">
				<label>E-Mail</label> <input name="email" type="text" parsley-required="true" parsley-type="email" parsley-type-email-message="Invalid E-Mail" parsley-required-message="E-Mail is required"></input>
			</div>
			<div class="row">
				<label>Password</label> <input name="password" type="password"></input>
			</div>

		</div>
		<div class="paneButtons">
			<button type="submit">Log In</button>
		</div>
	</form>
</div>
