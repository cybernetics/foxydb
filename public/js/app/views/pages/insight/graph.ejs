<h3 class="ui header left floated">
	Graph 
	<% if(results.length > 0) { %>
	<span class="ui label">Page <%=page%> of <%=count%></span>
	<% } %>
</h3>
<div class="ui floated right icon buttons">
	
	<a href="#" class="ui small button previous disabled"><i class="icon left arrow"></i></a>
	<a href="#" class="ui small button next disabled"><i class="icon right arrow"></i></a>
</div>
<div class="ui floated right small button dropdown graphYAxis graphAxis icon labeled" <%= (el) -> el.dropdown('setting', {action: 'nothing'}) %>>
	<div class="text">Y-Axis</div>
	<i class="icon dropdown"></i>
	<div class="menu">
		<% can.each(fields, function(item) { %>
			<div class="item">
				<div class="ui checkbox" <%= (el) -> el.checkbox('setting', {onChange: function(){controller.updateAxis()}}) %>>
					<input name="y" value="<%=item%>" type="checkbox" <%=(typeof y != 'undefined' && typeof y[item] != 'undefined'?'checked="checked"':'')%>></input><label><%=can.capitalize(item.replace(/_/g,' '))%></label>
				</div> 
			</div>
		<% }) %>
		
	</div>
</div>

<div class="ui floated right small button dropdown graphXAxis graphAxis icon labeled" <%= (el) -> el.dropdown('setting', {action: 'nothing'}) %>>
	<div class="text">X-Axis</div>
	<i class="icon dropdown"></i>
	<div class="menu grouped">
		<% can.each(fields, function(item) { %>
			<div class="item">
				<div class="ui radio checkbox" <%= (el) -> el.checkbox('setting', {onChange: function(){controller.updateAxis()}}) %>>
					<input name="x" value="<%=item%>" type="radio" <%=(x == item?'checked="checked"':'')%>></input><label><%=can.capitalize(item.replace(/_/g,' '))%></label>
				</div> 
			</div>
		<% }) %>

	</div>
</div>
<div class="ui floated right small button dropdown graphType graphAxis icon labeled" <%= (el) -> el.dropdown('setting', {action: 'nothing'}) %>>
	<div class="text">Type</div>
	<i class="icon dropdown"></i>
	<div class="menu grouped">
		<div class="item">
			<div class="ui radio checkbox" <%= (el) -> el.checkbox('setting', {onChange: function(){controller.updateAxis()}}) %>>
				<input name="type" value="line" type="radio" <%=(type == 'line' || typeof type == 'undefined'?'checked="checked"':'')%>></input><label>Line</label>
			</div>
		</div>
		<div class="item">
			<div class="ui radio checkbox" <%= (el) -> el.checkbox('setting', {onChange: function(){controller.updateAxis()}}) %>>
				<input name="type" value="area" type="radio" <%=(type == 'area'?'checked="checked"':'')%>></input><label>Area</label>
			</div>
		</div>
		<div class="item">
			<div class="ui radio checkbox" <%= (el) -> el.checkbox('setting', {onChange: function(){controller.updateAxis()}}) %>>
				<input name="type" value="area_stacked" type="radio" <%=(type == 'area_stacked'?'checked="checked"':'')%>></input><label>Area Stacked</label>
			</div>
		</div>
		<div class="item">
			<div class="ui radio checkbox" <%= (el) -> el.checkbox('setting', {onChange: function(){controller.updateAxis()}}) %>>
				<input name="type" value="bar" type="radio" <%=(type == 'bar'?'checked="checked"':'')%>></input><label>Bar</label>
			</div>
		</div>
		<div class="item">
			<div class="ui radio checkbox" <%= (el) -> el.checkbox('setting', {onChange: function(){controller.updateAxis()}}) %>>
				<input name="type" value="bar_stacked" type="radio" <%=(type == 'bar_stacked'?'checked="checked"':'')%>></input><label>Bar Stacked</label>
			</div>
		</div>
		<div class="item">
			<div class="ui radio checkbox" <%= (el) -> el.checkbox('setting', {onChange: function(){controller.updateAxis()}}) %>>
				<input name="type" value="scatterplot" type="radio" <%=(type == 'scatterplot'?'checked="checked"':'')%>></input><label>Scatter Plot</label>
			</div> 
		</div>
		<div class="item">
			<div class="ui radio checkbox" <%= (el) -> el.checkbox('setting', {onChange: function(){controller.updateAxis()}}) %>>
				<input name="type" value="lineplot" type="radio" <%=(type == 'lineplot'?'checked="checked"':'')%>></input><label>Line Plot</label>
			</div> 
		</div>
	</div>
</div>
<div class="ui clearing divider"></div>

<% if(results.length === 0) { %>
	<div class="ui message">
		No Results
	</div>
<% } else { %>
	<div class="graphOuter">
		<div class="graphAreaY"></div>
		<div class="graphArea"></div>
		<div class="graphAreaX"></div>
	</div>	
<% } %>

	<br />
	<div class="ui floated right icon buttons">
		<a href="#" class="ui small button previous disabled"><i class="icon left arrow"></i></a>
		<a href="#" class="ui small button next disabled"><i class="icon right arrow"></i></a>
	</div>
