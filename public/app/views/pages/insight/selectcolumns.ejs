<% columns.each(function (column, index){ %>
	<option value="<%= column.Field %>" <%= ((typeof selected !== 'undefined' && selected == column.Field) ? 'selected="selected"' : '');%>><%= column.Field %></option>
<% }); %>
<optgroup>
	<option value="-1" <%= ((typeof selected === 'undefined') || selected.length <= 0 ? 'selected="selected"' : '');%>>Select</option>
</optgroup>